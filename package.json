{
    "name": "@uchen/codeart-devenv",
    "version": "0.0.1",
    "description": "Utility to discover C++ development environment",
    "main": "build/main.js",
    "type": "commonjs",
    "repository": {
        "type": "git",
        "url": "https://github.com/uchen-ml/codeart-devenv"
    },
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc -w",
        "start": "node build/main.js",
        "dev": "ts-node src/main.ts",
        "dev:watch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/main.ts",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "test": "jest",
        "test:watch": "jest --watch"
    },
    "keywords": [
        "c++",
        "devtools",
        "compiler"
    ],
    "author": "Eugene Ostroukhov <eostroukhov@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@eslint/js": "^9.14.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.7.5",
        "@types/yargs": "^17.0.33",
        "eslint": "^9.14.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "globals": "^15.11.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.7",
        "prettier": "3.3.3",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.12.2"
    },
    "dependencies": {
        "@babel/preset-env": "^7.26.0",
        "babel-jest": "^29.7.0",
        "ts-jest": "^29.2.5",
        "yargs": "^17.7.2",
        "zod": "^3.23.8"
    }
}